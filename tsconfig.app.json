{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@scss/*": ["./src/assets/scss/*"],
			"@icons/*": ["./src/components/icons/*"],
			"@views/*": ["./src/views/*"],
			"@stores/*": ["./src/stores/*"],
			"@tstypes/*": ["./src/tstypes/*"],
			"@components/*": ["./src/components/*"]
		}
	}
}
